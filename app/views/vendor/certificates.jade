.certificates
	if vendor.certification != undefined
		if vendor.certification.length > 0
			.certifications
				h4
					span.fa.fa-language
					span  Certifications
				- var passing_year = false;
				each certificate in vendor.certification
					- if(certificate.passing_year != undefined && certificate.passing_year != "")
						- passing_year = true;
						- break;
				table.table(style="width:100%;")
					thead
						tr
							td ACADEMY
							td COURSE
							if passing_year
								td YEAR
					tbody
						each certificate in vendor.certification
							tr
								td #{certificate.academy}
								td #{certificate.course}
								td #{certificate.passing_year}