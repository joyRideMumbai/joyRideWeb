extends static-layout
block content
	.static-wrapper.sec-padtb
		.expert-individual.sec-padtb
			.mui-container
				.mui-row
					.mui-col-sm-12.mui-col-xs-12.mui-col-md-12.mui-col-lg-12
						.expert.sec-padtb.mui--text-center
							img.image.author-dp(data-original='https://b.fitn.in/e/#{expert._id}.jpg',src="https://b.fitn.in/e/#{expert._id}.jpg")
							h1.mui--text-display1.mui--text-center #{expert.name}
							span.small-divider
							p.mui--text-center.mui--text-title !{expert.aboutme}
					if expert.blogs.length > 0
						.validated
							h2 Articles Authored
							ul.mui-list--unstyled.mui-list--inline
								each blog in expert.blogs
									li
										a.mui--text-subhead(href="/article/#{blog.slug}") #{blog.title}
									li
										||
					if expert.validatedblogs.length > 0
						.validated
							h2 Articles Validated
							ul.mui-list--unstyled.mui-list--inline
								each blog in expert.validatedblogs
									li
										a.mui--text-subhead(href="/article/#{blog.slug}") #{blog.title}
									li
										||