#scrollhere
.mui-row.ratethis.mui--z1
	.mui-row
		.mui-col-md-8
			h3 Rate/Review #{vendor.title}
			small Share your experience at Muscle n Mind and help other fitness enthusiasts
		.mui-col-md-4
			.newrating
	.writereview.mui--hide.mui-row
		.mui-col-md-12
			.mui-textfield.mui-textfield--float-label
				textarea(placeholder="Write Review",rows="5")
		.mui-col-md-6
			.mui-row
				.mui-col-md-6
					span #{vendor.category.detail_rating[0]}
				.mui-col-md-6
					.detail0
		.mui-col-md-6
			.mui-row
				.mui-col-md-6
					span #{vendor.category.detail_rating[1]}
				.mui-col-md-6
					.detail1
		.mui-col-md-6
			.mui-row
				.mui-col-md-6
					span #{vendor.category.detail_rating[2]}
				.mui-col-md-6
					.detail2
		.mui-col-md-6
			.mui-row
				.mui-col-md-6
					span #{vendor.category.detail_rating[3]}
				.mui-col-md-6
					.detail3
		.mui-col-md-6
			.mui-row
				.mui-col-md-6
					span #{vendor.category.detail_rating[4]}
				.mui-col-md-6
					.detail4
		.mui-col-md-6.mui--text-right
			br
			button#submitreview.mui-btn.mui-btn--primary Publish Review 
				i.fa.fa-spinner.fa-spin.reviewspin
if vendor.reviews.length > 0
	.mui-row.rating-summary.mui--z1
		.mui-col-md-12
			h4
				span.fa.fa-star-half-empty
				span  Reviews &amp; Ratings (#{vendor.reviews.length})
		.mui-col-md-6.mui--text-center
			h2.overall #{Math.ceil(vendor.average_rating).toFixed(1)}
			span Overall Rating
		.mui-col-md-6
			.mui-row
				.mui-col-md-6
					span #{vendor.category.detail_rating[0]}
						span &nbsp;(#{Math.round(vendor.detail_rating_summary_average[0]*10/10)})
				.mui-col-md-6
					.progress
						.progress-bar(style="width:#{Math.round(vendor.detail_rating_summary_average[0]*10/10)*20}%;")
			.mui-row
				.mui-col-md-6
					span #{vendor.category.detail_rating[1]}
						span &nbsp;(#{Math.round(vendor.detail_rating_summary_average[1]*10/10)})
				.mui-col-md-6
					.progress
						.progress-bar(style="width:#{Math.round(vendor.detail_rating_summary_average[1]*10/10)*20}%;")
			.mui-row
				.mui-col-md-6
					span #{vendor.category.detail_rating[2]}
						span &nbsp;(#{Math.round(vendor.detail_rating_summary_average[2]*10/10)})
				.mui-col-md-6
					.progress
						.progress-bar(style="width:#{Math.round(vendor.detail_rating_summary_average[2]*10/10)*20}%;")
			.mui-row
				.mui-col-md-6
					span #{vendor.category.detail_rating[3]}
						span &nbsp;(#{Math.round(vendor.detail_rating_summary_average[3]*10/10)})
				.mui-col-md-6
					.progress
						.progress-bar(style="width:#{Math.round(vendor.detail_rating_summary_average[3]*10/10)*20}%;")
			.mui-row
				.mui-col-md-6
					span #{vendor.category.detail_rating[4]}
						span &nbsp;(#{Math.round(vendor.detail_rating_summary_average[4]*10/10)})
				.mui-col-md-6
					.progress
						.progress-bar(style="width:#{Math.round(vendor.detail_rating_summary_average[4]*10/10)*20}%;")
		.mui-col-md-12
			hr
			.reviews
				each review in vendor.reviews
					.review
						.content
							.mui-row
								.mui-col-md-1.mui-col-xs-3.mui--text-center
									img(src="https://b.fitn.in/avatar.png",width="48px")
								.mui-col-md-11.mui-col-xs-9
									.mui--text-caption
										strong #{review.customer.name}
									.reviewrate(data-rating="#{review.rating}")
									.review-content !{review.description}