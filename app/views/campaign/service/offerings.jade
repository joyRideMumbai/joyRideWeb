.offerings.mui-row.mui--z1
	if vendor.facilities.length > 0
		if fixedfacilities.length > 0
			each facility in fixedfacilities
				.mui-col-md-2.mui-col-xs-6.mui--text-center
					- var ico = "icon icon-" + facility.slug + ((facilities.indexOf(facility.slug) > -1) ? ' active' : '')
					span(class="#{ico}")
					br
					span.title #{facility.name}
	.mui-col-md-12.subofferings
		each offering in vendor.offerings
			.offering
				span.fa.fa-check
				span.tag #{offering.name}