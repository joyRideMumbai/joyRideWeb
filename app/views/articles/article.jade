extends articles-layout

block append meta
	title Health, Fitness, Workout, Diet &amp; Lifestyle articles validated by experts | Fitternity
	meta(name="description" content="#{blog.title} Health, Fitness, Workout, Diet &amp; Lifestyle articles validated by experts")
	meta(name="robots" content="index,follow")
	link(rel="canonical", href="https://www.fitternity.com/#{blog.slug}")
	//- Facebook
	meta(property="og:title" content="#{blog.title} Health, Fitness, Workout, Diet &amp; Lifestyle articles validated by experts")
	meta(property="og:site_name" content="Fitternity")
	meta(property="og:url" content="https://www.fitternity.com/#{blog.slug}")
	meta(property="og:description" content="Health, Fitness, Workout, Diet &amp; Lifestyle articles validated by experts")
	meta(property="og:image" content="https://b.fitn.in/articles/covers/#{blog.coverimage}")
	//- Twitter
	meta(property="twitter:title" content="#{blog.title} | Fitternity")
	meta(property="twitter:description" content="#{blog.title} Health, Fitness, Workout, Diet &amp; Lifestyle articles validated by experts")
	meta(property="twitter:site" content="@FitternityIndia")
	meta(property="twitter:image:src" content="https://b.fitn.in/articles/covers/#{blog.coverimage}")
block content
	.articles
		.mui-container
			.mui-row
				.mui-col-xs-12
					h1 #{blog.title}
					.image(style="background:linear-gradient(rgba(0, 0, 0, 0.05),rgba(0, 0, 0, 0.45)), url('https://b.fitn.in/articles/covers/#{blog.coverimage}');height:350px;background-repeat:no-repeat;background-size:cover;background-position:center center;")
			br
			.mui-row
				.mui-col-md-8.blog-body
					br
					.mui--text-body2
						| !{blog.body}
				.mui-col-md-4
					br
					br
					.mui-row
						.mui-col-xs-6.text-center
							a.mui-btn.mui-btn--fab.ssk.ssk-icon.ssk-facebook(href="")
							h5 SHARE
						.mui-col-xs-6.text-center
							a.mui-btn.mui-btn--fab.ssk.ssk-icon.ssk-twitter(href="" data-text="| Fitternity" data-title='#{twitterMeta}')
							h5 TWEET
					br
					br
					.mui-row.author
						.mui-col-xs-5
							.image(style="background-image:url('https://b.fitn.in/e/#{blog.author._id}.jpg');background-repeat:no-repeat;background-size:cover;background-position:center center;border-radius:50%;height:150px;width:150px;")
						.mui-col-xs-7.mui--text-center.mui--align-middle
							br
							h5.mui--text-title #{blog.author.name}
							a.mui-btn(href="/expert/#{blog.author.username}")
								span About Author  
								span.fa.fa-chevron-right
					br
					br
					br
					.mui--text-headline RELATED ARTICLES
					br
					.mui-row.related
						each blog in related
							.mui-col-xs-12
								.mui-panel.mui--z2
									.image(style="background:linear-gradient(rgba(0, 0, 0, 0.05),rgba(0, 0, 0, 0.45)), url('https://b.fitn.in/articles/covers/#{blog.coverimage}');background-position:center center;background-size:cover;background-repeat:no-repeat;height:100px;")
									.content
										a(href="/article/#{blog.slug}")
											h5.mui--text-headline #{blog.title}
										|  !{blog.excerpt}
										p by 
											a(href="/author/#{blog.author.username}") #{blog.author.name}