.mui-row.booktrial.mui--z1
	.mui-col-md-9.mui--hidden-xs
		.mui-row
			.mui-col-xs-4.text-center
				span.icon.icon-infinite
				h4 UNLIMITED TRIALS
				p Try multiple options before buying
			.mui-col-xs-4.text-center
				span.icon.icon-concierge
				h4 FITNESS CONCIERGE
				p Personal assistance on booking and membership purchase
			.mui-col-xs-4.text-center
				span.icon.icon-handshake
				h4 LOWEST PRICE GUARANTEE
				p Get the best price when purchasing a membership via Fitternity
	.mui-col-md-3.text-right.mui--align-middle.mui--text-center
		if vendor.commercial_type != 0
			if type == "individual"
				//- Pop up for the manual trial
				if JSON.stringify(vendor.facilities).indexOf('free trial') > -1
					a.mui-btn.mui-btn--danger.btn-trial#manualtrial(data-vendor="#{vendor.title}", data-vendor-id="#{vendor._id}", data-city-id="#{vendor.city._id}", data-session-type=false) Book a free trial
				else
					a.mui-btn.mui-btn--danger.btn-trial#manualtrial(data-vendor="#{vendor.title}", data-vendor-id="#{vendor._id}", data-city-id="#{vendor.city._id}", data-session-type=true) Book a trial
			else
				if vendor.services.length > 0 && vendor.manual_trial_enable != "1"
					a.mui-btn.mui-btn--danger.btn-trial(href="/booktrial/#{vendor.slug}" onclick="kyu1.pushevent('booktrialvendorpage', { vendor: '#{vendor._id}'})") 
						if JSON.stringify(vendor.facilities).indexOf('free trial') > -1
							span Book a free trial
						else
							span Book a trial
				else
					a.mui-btn.mui-btn--danger.btn-trial#manualtrial(data-vendor="#{vendor.title}", data-vendor-id="#{vendor._id}", data-city-id="#{vendor.city._id}", data-session-type=false) 
						if JSON.stringify(vendor.facilities).indexOf('free trial') > -1
							span Book a free trial
						else
							span Book a trial
	.text-center
		if type == "individual"						
			small Get an exclusive session, experience a personalised workout and explore the services offered with this trial
		else	
			small Get a personalised orientation, experience a great workout and explore the amenities with this trial